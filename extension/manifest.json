{
    "manifest_version": 3,
    "name": "Screentime Recorder Extension",
    "version": "1.0",
    "description": "Tracks screentime and sends data to the web app.",
    "permissions": ["storage", "tabs"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}